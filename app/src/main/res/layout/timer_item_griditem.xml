<!-- This TimerItem discards the circle because space is limited. -->
<!-- We need to stop this view from consuming clicks so the gridview will consume them -->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:id="@+id/timer_griditem_layout">

        <TextView
            android:id="@+id/timer_griditem_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:background="@android:color/transparent"

            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"/>
    </LinearLayout>